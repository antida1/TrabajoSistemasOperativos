<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="115dp"
            android:layout_height="23dp" android:id="@+id/textView2"
            android:textStyle="bold" android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="14dp" android:layout_marginStart="14dp" tools:text="@string/email"/>
    <TextView
            android:layout_width="294dp"
            android:layout_height="62dp"
            android:id="@+id/textView4"
            android:textColor="#0A27DC" android:textSize="24sp"
            android:textStyle="bold" android:shadowColor="#151A1E" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.452" app:layout_constraintVertical_bias="0.073"
            android:layout_marginBottom="62dp" android:layout_marginRight="40dp" android:layout_marginEnd="40dp"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="10dp"
            tools:text="@string/titulo_registro"/>
    <Button
            android:layout_width="145dp"
            android:layout_height="59dp" android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="176dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="147dp" android:layout_marginStart="147dp" android:layout_marginEnd="176dp"
            android:layout_marginRight="176dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.245" android:layout_marginTop="110dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber" android:text="@string/boton_enviar"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="96dp" android:layout_marginLeft="14dp" android:layout_marginStart="14dp"
            android:textStyle="bold" tools:text="@string/nombre_completo"/>
    <TextView
            android:layout_width="115dp"
            android:layout_height="20dp" android:id="@+id/textView3"
            android:textStyle="bold" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="14dp" android:layout_marginStart="14dp" tools:text="@string/cedula"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:hint="nombre completo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="48dp" android:layout_marginEnd="48dp" android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:hint="email"/>
    <EditText
            android:layout_width="211dp"
            android:layout_height="42dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:hint="cedula"/>

</androidx.constraintlayout.widget.ConstraintLayout>